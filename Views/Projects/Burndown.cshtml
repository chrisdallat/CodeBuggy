@model CodeBuggy.Models.Projects.ProjectsModel

@{
    ViewData["Title"] = "Burndown Chart";
}

<!-- Your burndown chart rendering logic goes here -->
<h2>@ViewData["Title"]</h2>
<!-- Include your burndown chart rendering logic here -->



<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="text/javascript" src="~/js/burndown.js"></script>

<canvas id="myChart" width="400" height="200"></canvas>

@{
    var ticketData = Model?.Tickets != null ? Html.Raw(Json.Serialize(Model.Tickets)) : null;
}

<pre>@ticketData</pre>

<script>
    // Call the function to initialize the burndown chart with the ticket data
    var ticketDataJson = @ticketData;
    if (ticketDataJson) {
        initializeBurndownChart(ticketData);
    }
</script>